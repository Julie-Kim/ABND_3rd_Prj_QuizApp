<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/button_color</item>
    </style>

    <style name="QuestionNumberText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/question_number_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/question_number_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

    <style name="StatementText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/statement_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/statement_margin_start_end</item>
        <item name="android:textColor">@color/question_number_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

    <style name="AnswerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/answer_padding_start</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
    </style>

    <style name="TableQuizNumberText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/table_text_size</item>
        <item name="android:background">@color/table_title_background_color</item>
        <item name="android:textColor">@color/table_title_text_color</item>
        <item name="android:layout_margin">@dimen/table_column_margin</item>
    </style>

    <style name="TableQuizResultText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/table_result_text_size</item>
        <item name="android:background">@color/table_result_background_color</item>
        <item name="android:textColor">@color/table_result_text_color</item>
        <item name="android:layout_margin">@dimen/table_column_margin</item>
    </style>

</resources>
